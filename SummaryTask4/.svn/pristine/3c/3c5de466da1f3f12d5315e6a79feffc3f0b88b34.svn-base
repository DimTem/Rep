	@Override
	public List<Patient> findAll() throws DBException {
		List<Patient> patients = new ArrayList<Patient>();
		DBManager manager = DBManager.getInstance();
		Statement st = null;
		LOG.trace("find all patients started");
		try (Statement st1 = connection.createStatement()) {
			ResultSet rs = st1.executeQuery(SQL_SELECT_ALL_PATIENTS);
			LOG.trace("find all patients finished");
			while (rs.next()) {
				Patient patient = extractPatientFromResultSet(rs);
				patients.add(patient);
			}
		} catch (SQLException e) {
			LOG.error("can not find all patients", e);
			throw new DBException("can not find all patients", e);
		} finally {
			manager.close(st);
		}
		return patients;
	}

