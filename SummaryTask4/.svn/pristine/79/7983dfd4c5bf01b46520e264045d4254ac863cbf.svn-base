package ua.nure.bratiuschenko.SummaryTask4.web.controllers;

import java.io.IOException;
import java.net.InetAddress;
//import java.time.LocalDate;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import ua.nure.bratiuschenko.SummaryTask4.utils.CheckUser;

/**
 * Servlet implementation class Authorization
 */
@WebServlet("/auth")
public class Authorization extends HttpServlet {
	private static final long serialVersionUID = 1L;

	/**
	 * @see HttpServlet#HttpServlet()
	 */
	public Authorization() {
		super();
		// TODO Auto-generated constructor stub
	}

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doGet(HttpServletRequest request,
			HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		String login = request.getParameter("login");
		String password = request.getParameter("pass");
		String privs = null;
		InetAddress ip = InetAddress.getLocalHost();
		privs = CheckUser.check(login, password);
		response.setContentType("text/html");
		response.getWriter()
				.print("<!DOCTYPE html><html><head><meta charset=\"UTF-8\"><title>Authorization</title></head><body>");
		if (privs != null) {
			response.getWriter().print(
					"<b>" + login + "</b> have " + privs
							+ " priveleges<br> Date: "// + LocalDate.now()
							+ "<br>IP: " + ip);
			if (privs.equals("administrator") || privs.equals("admin")) {
//				response.getWriter()
//						.print("<br><a href=/SummaryTask04/jsp/admin/Doctors.jsp> DOCTORS </a>");
				 response.getWriter().print("<br><a href=/SummaryTask4/Doctor> DOCTORS </a><br>");
//				 response.getWriter().print("&nbsp;&nbsp; <a href=/SummaryTask04/jsp/admin/DoctorsByCategory.jsp>Show doctors by categories </a>");

				response.getWriter()
						.print("<br><a href=/SummaryTask4/Patient> PATIENTS </br>");
			} else {
				// response.getWriter().print("<br><a href=/Task010Dima/user>View tables</a>");
			}
		} else {
			response.getWriter()
					.print("user <b>"
							+ login
							+ "</b> does not exist <br><a href=/SummaryTask4>go back</a>");
		}

	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doPost(HttpServletRequest request,
			HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
